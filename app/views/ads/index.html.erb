<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Offer</th>
      <th>Category</th>
      <th>Expiration date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.user_id %></td>
        <td><%= ad.title %></td>
        <td><%= ad.description %></td>
        <td><%= ad.offer %></td>
        <td><%= ad.category_id %></td>
        <td><%= ad.expiration_date %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

