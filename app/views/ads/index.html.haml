%h1 Listing ads
%table
  %thead
    %tr
      %th User
      %th Title
      %th Description
      %th Category
      %th Expiration date
      %th
      %th
      %th
  %tbody
    - @ads.each do |ad|
      %tr
        %td= ad.user_id
        %td= ad.title
        %td= ad.description
        %td= ad.offer
        %td= ad.category_id
        %td= ad.expiration_date
        %td= link_to 'Show', ad
        %td= link_to 'Edit', edit_ad_path(ad)
        %td= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Ad', new_ad_path
